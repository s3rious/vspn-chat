{
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "h",

    "baseUrl": "src",
    "module": "esNext",
    "moduleResolution": "node",
    "lib": [ "dom", "esnext" ],

    "target": "es3",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist",

    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": [
    "src/**/*"
  ],

  "exclude": [
    "node_modules"
  ]
}
